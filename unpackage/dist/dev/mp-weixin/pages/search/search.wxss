.search-ico image {
	width: 80rpx;
	height: 80rpx;
}
.search-text {
	font-size: 14px;
	width: 650rpx;
	padding-left: 20px;
}
.text{
	font-size: 24px;
}
.search {
	display: flex;
	flex-direction: row;
	margin: 100rpx 50rpx 50rpx;
	border: 1px solid #808080;
	align-items: center;
	border-radius: 10px;
}
.search-ico {
	display: flex;
	flex-direction: column;
	justify-content: center;
	padding: 0rpx 10rpx;
}
.line {
	width: 100%;
	border-bottom: #C0C0C0 1px solid;
	margin-top: 10px;
	margin-bottom: 20px;
}
.hot {
	margin: 0 50rpx;
}
.hot-box{
	display: flex;
	flex-wrap: wrap;
}
.hot-num-1 {
	display: flex;
	align-items: center;
	width: 300rpx;
	height: 50px;
}
.hot-icon-1 {
	width: 20rpx;
	height: 20rpx;
}
.hot-icon-2{
	width: 25rpx;
	height: 15rpx;
	margin-left: 5px;
}
.hot-num-1 text {
	margin-left: 10px;
	font-size: 35rpx;
}

