<block wx:if="{{songFlag}}"><view class="box"><view class="music"><image class="music-image" src="{{songDetail.al.picUrl}}" mode></image><view class="music-icon-box"><image class="music-icon" src="{{icon[iconAction]}}" mode data-event-opts="{{[['tap',[['setIcon',['$event']]]]]}}" bindtap="__e"></image></view><view class="name">{{"《"+songDetail.name+'》'}}</view><view>{{songDetail.ar[0].name}}</view></view><view class="comment-box"><view data-event-opts="{{[['tap',[['clickRemove',['$event']]]]]}}" class="click" bindtap="__e"><image src="../../static/image/icon/prev.svg" mode></image></view><view class="comment">{{''+hotComments[index].content+''}}</view><view data-event-opts="{{[['tap',[['clickAdd',['$event']]]]]}}" class="click" bindtap="__e"><image src="../../static/image/icon/next.svg" mode></image></view></view></view></block>