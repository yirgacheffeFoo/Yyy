.carousel {
	width: 100%;
	height: 300rpx;
}

/* 每日图文 */
.picture {
	width: 750rpx;
	display: flex;
	justify-content: center;
}
.pic image {
	width: 625rpx;
}
.text {
	width: 500rpx;
	padding: 30px;
}
.day {
	font-size: 30rpx;
	font-weight: bold;
	margin-bottom: 10px;
	margin-top: 10px;
}
.model {
	box-shadow: 3px 3px 8px #C0C0C0;
}
.collection {
	display: flex;
	justify-content: center;
}
.collection image {
	width: 20px;
	height: 40px;
	margin-right: 30px;
}

/* -----------------------新的！----------------------------- */
.pic-2 {
	text-align: center;
}
.pic-2 image {
	width: 625rpx;
	height: 625rpx;
}
.user {
	display: flex;
	align-items: center;
	margin-top: 5px;
}
.userIcon {
	width: 30px;
	height: 30px;
	border-radius: 30px;
}
.userName {
	color: #999999;
	font-size: 15px;
}
.songName-box {
	display: flex;
	flex-direction: column;
}
.songName {
	color: #999999;
	font-weight: bold;
	font-size: 15px;
	align-self: flex-end;
}
.item-pic video {
	width: 500rpx;
	height: 400rpx;
	border-radius: 10px;
}
.item-text {
	font-size: 16px;
	width: 350rpx;
	height: 60rpx;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap;
}
.mv{
	width: 625rpx;
}
.items{
	display: flex;
}
.video{
	margin-right: 50rpx;
}

