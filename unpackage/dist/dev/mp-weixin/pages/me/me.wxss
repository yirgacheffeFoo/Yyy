.me-top {
	/* background-image: url(../../static/image/background-image/me-1.png); */
	width: 750rpx;
	height: 350rpx;
}
.me-top image {
	width: 90rpx;
	height: 90rpx;
	border-radius: 60px;
}
.me-top-img {
	display: flex;
	padding-top: 200rpx;
	padding-left: 30px;
	align-items: center;
}
.text {
	color: black;
	font-size: 18px;
	margin-left: 15px;
}
.me-collection-item image {
	width: 80rpx;
	height: 80rpx;
}
.me-collection-icon {
	display: flex;
	width: 750rpx;
	justify-content: space-around;
	margin-top: 10px;
}
.me-collection-item {
	text-align: center;
}
.me-collection-text,
.record-text {
	height: 60px;
	line-height: 60px;
	margin-left: 20px;
	font-size: 22px;
}
.me-end image {
	width: 20px;
	height: 20px;
	margin-left: 10px;
	margin-right: 10px;
}
.me-end{
	padding-top: 20px;
}
.me-end-items {
	display: flex;
	align-items: center;
	height: 40px;
	padding-bottom: 10px;
	margin: 0 15px;
}
.me-end-items text{
	font-size: 18px;
}
.me-end-items image{
	width: 30rpx;
	height: 30rpx;
}
.line {
	width: 620rpx;
	margin: 0 0 5px 60px;
	border-bottom: #dddddd 1px solid;
}
.record-icon {
	border: 1px dashed #000000;
	width: 130px;
	height: 80px;
	text-align: center;
	padding-top: 10px;
	margin: 0 auto;
}
.record-text{
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.right image{
	width: 55px;
	height: 30px;
	border-radius: 30px;
	font-size: 8px;
	margin-right: 20px;
	margin-top: 30px;
}
.pen image {
	width: 40px;
	height: 40px;
}
.pen {
	display: flex;
	align-items: center;
}
.idea {
	font-size: 10px
}
.page {
	background-color: #fafafa;
}
.collection-1,
.record,
.me-end {
	background-color: #FFFFFF;
	margin-bottom: 20px;
	padding-bottom: 30px;
}

